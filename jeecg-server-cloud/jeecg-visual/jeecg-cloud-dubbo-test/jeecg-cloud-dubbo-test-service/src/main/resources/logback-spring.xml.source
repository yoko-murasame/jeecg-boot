<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="logPath" source="member.logs.path" defaultValue="/home/app/logs"/>
    <property name="LOG_HOME" value="${logPath}"/>
    <springProperty scope="context" name="profileScope" source="spring.profiles.active" defaultValue="dev"/>
    <property name="PROFILE_SCOPE" value="${profileScope}"/>


    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%tid] [%thread] [%-5level] %logger{50} - %msg%n</pattern>
            </layout>
        </encoder>
    </appender>
    <appender name="rootFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/member-${PROFILE_SCOPE}.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/member-${PROFILE_SCOPE}.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <MaxHistory>15</MaxHistory>
            <totalSizeCap>512MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <!--        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">-->
        <!--            &lt;!&ndash;格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符&ndash;&gt;-->
        <!--            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] %logger{50} - %msg%n</pattern>-->
        <!--            <charset>UTF-8</charset>-->
        <!--        </encoder>-->
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%tid] [%thread] [%-5level] %logger{50} - %msg%n</pattern>
            </layout>
        </encoder>
    </appender>
    <springProfile name="test,prod,dev,uat,sit">
        <root>
            <level value="INFO"/>
            <appender-ref ref="rootFile"/>
        </root>
        <logger name="org.springframework">
            <appender-ref ref="CONSOLE"/>
            <level value="INFO"/>
        </logger>
        <logger name="cn.com.hyit">
            <appender-ref ref="CONSOLE"/>
            <level value="INFO"/>
        </logger>
        <logger name="org.apache.catalina.startup.DigesterFactory">
            <appender-ref ref="CONSOLE"/>
            <level value="INFO"/>
        </logger>

        <logger name="org.apache.catalina.util.LifecycleBase">
            <appender-ref ref="CONSOLE"/>
            <level value="ERROR"/>
        </logger>
        <logger name="org.apache.coyote.http11.Http11NioProtocol">
            <appender-ref ref="CONSOLE"/>
            <level value="WARN"/>
        </logger>

        <logger name="org.apache.tomcat.util.net.NioSelectorPool">
            <appender-ref ref="CONSOLE"/>
            <level value="WARN"/>
        </logger>
    </springProfile>


    <!--接口日志写入组件-->
    <appender name="bussAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/home/app/logs/busslog/service-info/service-info.log</File>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/home/app/logs/busslog/service-info/service-info-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>12</maxHistory>
            <maxFileSize>100MB</maxFileSize>
            <totalSizeCap>30GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout" >
                <!--接口日志只需要message-->
                <pattern>
                     %message%n
                </pattern>
            </layout>

        </encoder>
    </appender>

    <!--采集业务日志名称及组件配置-->
    <logger name="buss" additivity="false">
        <appender-ref ref="bussAppender"/>
    </logger>

</configuration>
